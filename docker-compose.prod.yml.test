version: "3"
services:
  app:
    container_name: pi-friday
    working_dir: /app/client
    build:
      context: ./app/client
  pb:
    container_name: svelte-auth-pocketbase
    working_dir: /pb
    build:
    context: ./pb
  volumes:
    - ./pb/pb_data:/pb/pb_data
    - ./pb/pb_migrations:/pb/pb_migrations

  nginx:
    container_name: pi-friday
    image: nginx:alpine
    volumes:
      - ./nginx.conf:/etc/nginx/nginx.conf
      - /etc/letsencrypt:/etc/letsencrypt
    ports:
      - 80:80
      - 8443:8443
